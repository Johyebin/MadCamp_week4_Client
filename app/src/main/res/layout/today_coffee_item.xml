<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="@android:color/transparent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/today_coffee_image"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:padding="8dp"
        android:layout_weight="1"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/coffee_cup"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="5">
        <TextView
            android:id="@+id/today_coffee_menu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_weight="2"
            android:fontFamily="@font/onprettynight"
            android:text="아메리카노"/>
        <TextView
            android:id="@+id/today_coffee_cafe"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:fontFamily="@font/onprettynight"
            android:text="공차"/>
        <TextView
            android:id="@+id/today_coffee_price"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:fontFamily="@font/onprettynight"
            android:text="3500"/>
        <TextView
            android:id="@+id/today_coffee_caffeine_content"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:fontFamily="@font/onprettynight"
            android:textStyle="bold"
            android:text="103"/>
    </LinearLayout>

</LinearLayout>